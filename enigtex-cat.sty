\newcommand{\twolinesstep}{0.5pt}
\pgfdeclaredecoration{twolines}{initial}
{
	\state{initial}[width=\twolinesstep]
	{
		\pgfpathmoveto{\pgfpoint{0pt}{1pt}}
		\pgfpathlineto{\pgfpoint{\twolinesstep}{1pt}}
		\pgfpathmoveto{\pgfpoint{0pt}{-1pt}}
		\pgfpathlineto{\pgfpoint{\twolinesstep}{-1pt}}
		\pgfpathmoveto{\pgfpoint{0pt}{0pt}}
	}
}
